{
  "name": "xhat",
  "version": "1.0.0",
  "main": "dist/server.js",
  "repository": "https://github.com/delta-kor/xhat",
  "author": "delta-kor <deltakbot1@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn build-ts && yarn build-sass && yarn lint && yarn copy",
    "build-ts": "tsc",
    "build-sass": "node-sass src/public/style/main.sass dist/public/style/main.css",
    "copy": "ts-node copy.ts",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint --fix src/**/*.ts",
    "deploy": "node dist/server.js",
    "start": "yarn deploy",
    "dev": "concurrently \"yarn dev-node\" \"yarn dev-ts\" \"yarn dev-sass\"",
    "dev-node": "nodemon dist/server.js",
    "dev-ts": "tsc -w",
    "dev-sass": "node-sass -w src/public/style/main.sass dist/public/style/main.css"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "connect-mongo": "^3.2.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-flash": "^0.0.2",
    "express-session": "^1.17.1",
    "express-validator": "^6.6.1",
    "module-alias": "^2.2.2",
    "pug": "^3.0.0",
    "shelljs": "^0.8.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.7",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/express-flash": "^0.0.2",
    "@types/express-session": "^1.17.0",
    "@types/express-validator": "^3.0.0",
    "@types/module-alias": "^2.0.0",
    "@types/mongodb": "^3.5.26",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.0.27",
    "@types/pug": "^2.0.4",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^7.6.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-import-resolver-typescript": "^2.2.0",
    "eslint-plugin-import": "^2.22.0",
    "node-sass": "^4.14.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "_moduleAliases": {
    "@providers": "dist/providers",
    "@controllers": "dist/controllers",
    "@middlewares": "dist/middlewares",
    "@routes": "dist/routes",
    "@interfaces": "dist/interfaces",
    "@public": "dist/public"
  }
}
