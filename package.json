{
  "name": "xhat",
  "version": "1.0.0",
  "main": "dist/server.js",
  "repository": "https://github.com/delta-kor/xhat",
  "author": "delta-kor <deltakbot1@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clear": "ts-node clear.ts",
    "build": "yarn build-ts && yarn build-parcel",
    "build-ts": "tsc",
    "build-parcel": "parcel build views/pages/**/*.pug --out-dir dist/client --no-source-maps",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint --fix src/**/*.ts",
    "deploy": "node dist/server.js",
    "start": "yarn clear && yarn build && yarn deploy",
    "dev": "concurrently -k -p \"[{name}]\" -n \"parcel,typescript,node\" -c \"yellow,cyan,green\" \"yarn dev-parcel\" \"yarn dev-ts\" \"yarn dev-node\"",
    "dev-node": "nodemon dist/server.js",
    "dev-ts": "tsc -w",
    "dev-parcel": "parcel watch views/pages/**/*.pug --out-dir dist/client"
  },
  "dependencies": {
    "axios": "^0.20.0",
    "compression": "^1.7.4",
    "connect-mongo": "^3.2.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-flash": "^0.0.2",
    "express-session": "^1.17.1",
    "module-alias": "^2.2.2",
    "shelljs": "^0.8.4"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.7",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/express-flash": "^0.0.2",
    "@types/express-session": "^1.17.0",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^14.0.27",
    "@types/pug": "^2.0.4",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^7.6.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-import-resolver-typescript": "^2.2.0",
    "eslint-plugin-import": "^2.22.0",
    "pug": "^3.0.0",
    "sass": "^1.26.10",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "_moduleAliases": {
    "@providers": "dist/providers",
    "@controllers": "dist/controllers",
    "@middlewares": "dist/middlewares",
    "@routes": "dist/routes",
    "@interfaces": "dist/interfaces",
    "@public": "dist/public"
  },
  "browserslist": [
    "last 3 and_chr versions",
    "last 3 chrome versions",
    "last 3 opera versions",
    "last 3 ios_saf versions",
    "last 3 safari versions"
  ]
}
